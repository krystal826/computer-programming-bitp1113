#include "stdafx.h"
#include<iostream>
#include<cmath>

using namespace std;

int main()
{
	//array
	//declare any array name month with 10 elements
	//set the number of days for each month

	int month[12];
	month[0] = 31; //january
	month[1] = 28; //february
	month[2] = 31; //march
	month[3] = 30; //april
	month[4] = 31; //may
	month[5] = 30; //june
	month[6] = 31; //july
	month[7] = 31; //august
	month[8] = 30; //september
	month[9] = 31; //october
	month[10] = 30; //november
	month[11] = 31; //december

	for (int i=0;i<12;i++)
		cout <<"Month "<<i+1<<" has " <<month[i]<<" days " << endl<<endl;

	return 0;
}
